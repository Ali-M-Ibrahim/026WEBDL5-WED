@model Teacher

<h1>Create Teacher Form</h1>

<form  asp-controller="Teacher" asp-action="Store"  method="post">

	<div asp-validation-summary="All" class="text-danger"></div>


	<div class="form-group">
		<label asp-for="Name">Full Name</label>
		<input id="Name" asp-for="Name" type="text" class="form-control" />
	   <span asp-validation-for="Name" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Degree">Degree</label>
		<input id="Degree" asp-for="Degree" type="text" class="form-control" />
		<span asp-validation-for="Degree" class="text-danger"></span>

	</div>

	<div class="mt-1">
		<input type="submit" class="btn btn-success" />
		<a asp-controller="Teacher" asp-action="Index" class="btn btn-info">Cancel</a>
	</div>

</form>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}