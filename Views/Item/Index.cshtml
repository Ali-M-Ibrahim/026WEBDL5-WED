@model List<Item>

<h1>List of Items</h1>

<a class="btn btn-success mt-1 mb-1" asp-controller="Item" asp-action="Create" > + Item</a>
<table class="table table-striped table-hover">

	<tr>
		<th>Id</th>
		<th>Name</th>
		<th>Description</th>
		 <th>Price</th>
		 <th>Actions</th>
	</tr>

	@foreach(var obj in Model){
		<tr>
			<td>@obj.Id</td>
			<td>@obj.Name</td>
			<td>@obj.Description</td>
			<td>@obj.Price</td>
			<td>
				<a asp-controller="Item" 
				asp-action="Delete"
				asp-route-id="@obj.Id">
				Delete
			</a>

						<a asp-controller="Item" 
				asp-action="Edit"
				asp-route-id="@obj.Id">
				Edit
			</a>

			</td>
		</tr>
	}

</table>