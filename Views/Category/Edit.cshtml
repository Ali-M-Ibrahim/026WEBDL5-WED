@model Category;

<h1>Category Form</h1>

<form asp-controller="Category" asp-action="Update" method="post">
	<div asp-validation-summary="All" class="text-danger"></div>
	<input type="hidden" asp-for="Id" /> 
	<div class="form-group">
		<label asp-for="Name">Name</label>
		<input id="Name" asp-for="Name" type="text" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Description">Description</label>
		<textarea id="description" asp-for="Description" class="form-control"></textarea>
		<span asp-validation-for="Description" class="text-danger"></span>

	</div>

			<div class="form-group">
		<label asp-for="Price">Price</label>
		<textarea id="Price" asp-for="Price" class="form-control"></textarea>
		<span asp-validation-for="Price" class="text-danger"></span>
	</div>


		<div class="mt-2">
			<input type="submit" class="btn btn-success" />
			<a asp-controller="Category" asp-action="Index" class="btn btn-danger">Back</a>
		</div>
</form>

@section Scripts {
		<partial name="_ValidationScriptsPartial" />
}