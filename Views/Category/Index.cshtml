@model List<Category>

	<a asp-controller="Category" asp-action="Create" class="btn btn-success mb-2">+ Create</a>
	<table class="table table-striped table-hover">
		<tr>
	<th>Id</th>
	<th>Name</th>
	<th>Description</th>
	<th>Actions</th>
</tr>

@foreach(var obj in Model){
	<tr>
		<td>@obj.Id</td>
			<td>@obj.Name</td>
			<td>@obj.Description</td>
				<td>
<a asp-controller="Category" asp-action="Details" asp-route-id="@obj.Id">View</a>

<a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>

<a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>

</td>
	</tr>
}
	</table>